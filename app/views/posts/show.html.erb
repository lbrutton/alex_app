<h1 class="header">Line-up:</h1>

<ul>
  <% @posts.each do |post| %>
    <li class="list">
      <%= post.joke %>
      <br><%= post.image %>
      <br><%= post.date %>
      <br><%= link_to 'edit', '#' %> <%= link_to 'delete', delete_post_path, method: :delete, data: {confirm: 'Bist du sicher?'} %>
    </li>
    <hr>
  <% end %>
</ul>

<div class="text-center">
	<%= link_to "New post", new_post_path, class:"btn btn-default" %>
</div>